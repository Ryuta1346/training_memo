<div class="top-page">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group col-md-8">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
    </div>

    <div class="form-group col-md-8">
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br/>
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" %>
    </div>

    <div class="form-group col-md-8">
      <%= f.label :トレーニング開始日 %><br/>
      <%= f.date_select :started_at %>
    </div>

    <div class="form-group col-md-8">
      <%= f.text_field :weight, autofocus: true, placeholder: "開始時の体重" %>kg
      <%= f.text_field :height, autofocus: true, placeholder:"身長(*m表記)" %>m
<!--      <%#= f.text_field :bmi, autofocus: true, placeholder: "開始時のBMI指数" %>%<br />-->
<!--      <p style="font-size: 12px">*BMI指数 = 体重(kg) / 身長(m) / 身長(m)<br />->標準:22, 肥満:25以上</p>-->
    </div>

    <div class="form-group col-md-8">
      <%= f.text_field :aim, autofocus: true, placeholder: "目標体重" %>kg
    </div>


    <div class="actions col-md-8">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>