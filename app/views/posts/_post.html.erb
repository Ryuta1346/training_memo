<% @posts.each_with_index do |post, i| %>
  <div class="card">
    <%= image_tag 'crossfit-534615_1920.jpg', class: "feed-img" %>
    <div class="card-body">
      <h4 class="card-title"><%= i + 1 %>日目</h4>
      <p class="card-text">
      <table style="border-collapse: collapse; width: 100%;">
        <tbody>
        <tr>
          <td style="width: 20%;">日　　時:</td>
          <td style="width: 20%;"><%= post.date %></td>
        </tr>
        <tr>
          <td style="width: 20%;">体　　重:</td>
          <td style="width: 20%;"><%= post.weight %>kg</td>
        </tr>
        <tr>
          <td style="width: 20%;">B  M  I:</td>
          <td style="width: 20%;"><%= post.bmi %>%</td>
        </tr>
        </tbody>
      </table>
      <%= link_to "詳細をみる", post %>
      <div class="timestamp"><%= time_ago_in_words(post.created_at) %> ago.</div>
      </p>
    </div>
  </div>
<% end %>