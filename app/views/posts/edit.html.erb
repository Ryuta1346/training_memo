<h1>Edit Post</h1>
<div class="card-show">
  <%= image_tag @post.image.url(:large) %>
  <div class="post-form">
    <%= form_for(@post) do |f| %>
      <div class="form-row">
        <div class="form-group col-md-4 base_info">
          <%= f.label :本日の体重 %><br/>
          <%= f.text_field :weight, class: "weight-field" %>kg
        </div>
        <div class="form-group col-md-4 base_info">
          <%= f.label :Photo %>
          <%= f.file_field :image %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :トレーニング内容 %>
        <%= f.text_area :training, placeholder: "トレーニング内容", class: "content-field" %>
      </div>
      <div class="form-group">
        <%= f.label :メモ %><br/>
        <%= f.text_area :content, placeholder: "Compose new Post", class: "content-field" %>
      </div>
      <div class="form-group">
        <%= f.date_select :date %>
      </div>
      <%= f.submit "Post", class: "btn btn-success" %>
    <% end %>
    <%= link_to "return Post page", post_path %>
  </div>
</div>