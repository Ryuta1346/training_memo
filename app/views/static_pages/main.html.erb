<div class="post-line">
  <div class="d-md-flex flex-md-equal w-100 my-md-3 pl-md-3">
    <% @posts.each do |post| %>
      <div class="bg-dark mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center text-white overflow-hidden">
        <div class="my-3 py-3">
          <h2 class="display-5"><%= (post.date - @posts.last.date + 1).to_i %>日目</h2>
          <h2 class="display-5"><%= post.date %></h2>
          <h2 class="display-5"><%= post.weight %>kg</h2>
          <h2 class="display-5"><%= (post.weight / current_user.height / current_user.height).round(2) %>%</h2>
          <h2 class="display-5"><%= post.content %></h2>
        </div>
        <div class="bg-light shadow-sm mx-auto" style="width: 80%; height: 300px; border-radius: 21px 21px 0 0;">
          <%= image_tag post.image? ? post.image.url : ("crossfit-medium.jpg") %>
        </div>
      </div>
    <% end %>
  </div>
</div>

