<% @users.each do |user| %>
  <div class="card">
    <div class="card-body">
      <table style="border-collapse: collapse; width: 100%;">
        <tbody>
        <tr>
          <td style="width: 20%;"> User:</td>
          <td style="width: 20%;"><%= link_to user.name, user %></td>
        </tr>
<!--        <tr>-->
