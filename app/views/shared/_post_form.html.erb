<div class="post-form">
  <h2><%= (Date.today - @posts.last.date + 1).to_i %>日目</h2>
  <%= form_for(@post) do |f| %>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.label :本日の体重 %><br/>
        <%= f.text_field :weight, class:"weight-field" %>kg
      </div>
<!--      <div class="form-group col-md-6">-->
<!--        <%#= f.label :本日のBMI指数 %><br/>-->
<!--        <%#= f.number_field :bmi %>%-->
<!--      </div>-->
    </div>
    <div class="form-group">
      <%= f.text_area :content, placeholder: "Compose new Post", class: "content-field" %>
    </div>
    <div class="form-group">
      <%= f.date_select :date %>
    </div>
    <%= f.submit "Post", class: "btn btn-success" %>
  <% end %>
</div>