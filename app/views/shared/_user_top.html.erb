<% if flash[:danger] || flash[:success] %>
  <p><%= flash[:danger] || flash[:success] = "" %></p>
<% end %>

<div class="user-info">
  <div class="profile">
    <div class="profile-top">
      <%= current_user.name %><br/>
      <p class="aim">【目標:<%= current_user.aim %>】</p>
    </div>
    <div class="start-info">
      <table style="border-collapse: collapse; width: 100%;">
        <tbody>
        <tr>
          <td style="width: 50%; text-align: center;" colspan="2">開始時</td>
        </tr>
        <tr>
          <td style="width: 20%;">日　　時:</td>
          <td style="width: 20%;"><%= current_user.started_at %></td>
        </tr>
        <tr>
          <td style="width: 20%;">体　　重:</td>
          <td style="width: 20%;"><%= current_user.weight %>kg</td>
        </tr>
        <tr>
          <td style="width: 20%;">体脂肪率:</td>
          <td style="width: 20%;"><%= current_user.body_fat_percentage %>%</td>
        </tr>
        </tbody>
      </table>
    </div>
    <div class="current_info">
      <table style="border-collapse: collapse; width: 100%;">
        <tbody>
        <tr>
          <td style="width: 50%; text-align: center;" colspan="2">現在</td>
        </tr>
        <tr>
          <td style="width: 20%;">残日数　:</td>
          <td style="width: 20%;"><%= 100 - @posts.ids.count %>日</td>
        </tr>
        <tr>
          <td style="width: 20%;">体　　重:</td>
          <td style="width: 20%;"><%= current_user.posts.last.weight %>kg</td>
        </tr>
        <tr>
          <td style="width: 20%;">体脂肪率:</td>
          <td style="width: 20%;"><%= current_user.posts.last.body_fat_percentage %>%</td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="btn-position">
    <%= link_to "Edit Account", edit_user_registration_path, class: "btn btn-primary" %>
    <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-warning" %>
    <%= link_to "Delete Account", user_registration_path, class: "btn btn-danger", method: :delete, data: { confirm: "You sure?" } %>
  </div>
</div>
<div class="container">
  <%= render 'shared/post_form' %>
</div>
<div class="card-feed">
  <%= render 'posts/post' %>
</div>
