<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
  <div class="col-md-5 p-lg-5 mx-auto my-5">
    <h3 class="display-4 font-weight-normal"><%= current_user.name %></h3>
    <h4>目標:<%= current_user.aim %>kg</h4>
    <h4>達成まで:<%= @by_achievement %>kg</h4>
    <p class="lead font-weight-normal">
    <div class="start-info">
      <table>
        <tbody style="border: 1px solid #000000">
        <tr>
          <td style="width: 200px"></td>
          <td style="width: 400px">開始時</td>
          <td style="width: 400px">現　在</td>
        </tr>
        <tr>
          <td style="width: 200px">日時</td>
          <td style="width: 400px"><%= @user.started_at %></td>
          <td style="width: 400px"><%= 100 - @posts.ids.count %>日</td>
        </tr>
        <tr>
          <td style="width: 200px">体重</td>
          <td style="width: 400px"><%= current_user.weight %>kg</td>
          <td style="width: 400px"><%= @recent_weight %>kg</td>
        </tr>
        <tr>
          <td style="width: 200px">B M I</td>
          <td style="width: 400px"><%= @first_bmi %>%</td>
          <td style="width: 400px"><%= @recent_bmi %>%</td>
        </tr>
        </tbody>
      </table>
    </div>
    </p>
  </div>
  <div class="product-device shadow-sm d-none d-md-block"></div>
  <div class="product-device product-device-2 shadow-sm d-none d-md-block"></div>
</div>
<div class="btn-position">
  <%= link_to "Edit Account", edit_user_registration_path, class: "btn btn-primary" %>
  <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-warning" %>
  <%= link_to "Delete Account", user_registration_path, class: "btn btn-danger", method: :delete, data: { confirm: "You sure?" } %>
</div>
